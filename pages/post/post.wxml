<view>
  <swiper indicator-dots autoplay circular>
    <swiper-item>
      <image src="/images/post/cat.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/post/crab.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/post/bl.png"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:key="postId">
    <view data-post-id="{{item.postId}}" class="post-container" bind:tap="obGoToDetail">
      <view class="post-author-date">
        <image class="post-author" src="{{item.avatar}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <view class="title">{{item.title}}</view>
      <image class="post-image" src="{{item.imgSrc}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <!-- <image class="post-like-image" src="/images/icon/chat.png"></image> -->
        <l-icon class="post-like-image" name='favor' size='32' color='#666'></l-icon>
        <text class="post-like-font">{{item.collection}}</text>
        <!-- <image class="post-like-image" src="/images/icon/view.png"></image> -->
        <l-icon class="post-like-image" name='eye' size='32' color='#666'></l-icon>
        <text class="post-like-font">{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>